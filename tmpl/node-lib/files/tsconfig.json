{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017", "esnext"],
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["*"],
      "@src/*": ["src/*"],
      "@linked/*": ["src/@linked/*"]
    },
    "typeRoots": ["node_modules/@types", "src/typings"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "experimentalDecorators": true
  },

  "exclude": ["build", "scripts", "src/scripts", "src/**/*.test.ts", "src/test", "src/@linked"]
}
